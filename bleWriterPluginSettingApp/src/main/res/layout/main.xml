<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical">

    <EditText
        android:id="@+id/BLE_Device_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="6dip"
        android:hint="@string/ble_Device_Address_Hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/BLE_Service_Guid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="6dip"
        android:hint="@string/ble_Service_Guid_Hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/BLE_Characteristic_Guid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="6dip"
        android:hint="@string/ble_Characteristic_Guid_Hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/BLE_Value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="6dip"
        android:hint="@string/ble_Value_Hint"
        android:inputType="text" />

</LinearLayout>
